{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
  "source": "functions"
  },
  "hosting": {
    "site": "db-abstract",
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "../.*",
      "**/node_modules**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
